<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">Edit Recipe</a></li>
</ol>

<br/>
<%- partial ('partials/statusmessage.ejs') %>

<form action="#" method="">
  <div class="form-group">
    <label for="recipe_id">SELECT A RECIPE TO UPDATE</label><br/>
    <select id="recipe_id" name="id">
    <% if(typeof recipes != "undefined" && recipes.length > 0){ %>
      <% recipes.forEach(function(recipe){ %>
        <option value="<%= recipe.id %>">
          <%= recipe.title %>
        </option>
      <% }) %>
    <% } %>
    </select>
  </div>
</form>

<h2>Update Recipe</h2>
<form action="/update" method="POST" class="form-horizontal" id="updateRecipeForm">
  <input type="hidden" name="id" id="recipe_id" value="">
  <div class="form-group">
    <label for="recipe_title" class="col-sm-2 control-label">Recipe Title</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="recipe_title" name="title" placeholder="Lasagna" required>
    </div>
  </div>
  <div class="form-group">
    <label for="recipe_description" class="col-sm-2 control-label">Recipe Description</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="recipe_description" name="description"  placeholder="Mom's specialty homemade lasgna for the whole family!" required>
    </div>
  </div>
  <div class="form-group">
    <label for="recipe_cooktime" class="col-sm-2 control-label">Cook Time (min)</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="recipe_cooktime" name="minutes" placeholder="40" required>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Update Recipe</button>
    </div>
  </div>
</form>
