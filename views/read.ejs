<%- partial ('partials/statusmessage.ejs') %>
<form>
      search recipes: <input id="searchTerm" name="searchTerm" type="text" placeholder="search here"><button id="searchButton">search recipe</button>
</form>

<h2>Recipes</h2>
<table class="table table-striped table-bordered" id="recipesTable" style="width:100%">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Time to Cook</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof recipes != "undefined" && recipes.length > 0){ %>
    <% recipes.forEach(function(recipe){ %>
      <tr>
        <td><a href="recipes/<%= recipe.id %>"><%= recipe.title %></a></td>
        <td><%= recipe.description %></td>
        <td><%= recipe.minutes %></td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>
