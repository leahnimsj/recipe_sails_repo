<h2>Add Instructions</h2>
<form action="/recipes/<%= id %>/instructions/create" method="POST" class="form-horizontal" id="addInstructionForm">
  <div class="form-group">
    <label for="recipe_step" class="col-sm-2 control-label">Step</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="recipe_step" name="stepNumber" placeholder="1" required>
    </div>
  </div>
  <div class="form-group">
    <label for="recipe_step" class="col-sm-2 control-label">Instruction</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="recipe_step" name="instruction" placeholder="Melt the butter" required>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Add Instruction</button>
    </div>
  </div>
</form>
<div class="btn-group" role="group" aria-label="...">
  <button type="button" class="btn btn-default"><a href="/">Click to Complete Recipe</a></button>
</div>
